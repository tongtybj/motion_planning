<?xml version="1.0"?>
<launch>
  ###########  launch config  ###########
  <arg name="type" default="quad" />
  <arg name="headless" default="false" />
  <arg name="onboards_model"  default = "default_mode_201907"/>

  ###########  Robot Model  ###########
  <include file="$(find hydrus)/launch/robot_model.launch" >
    <arg name="type" value="$(arg type)" />
    <arg name="headless" value="$(arg headless)" />
    <arg name="need_joint_state" value="true"/>
    <arg name="onboards_model"  default = "$(arg onboards_model)"/>
  </include >

  ###########  Differential Motion Planner  ###########
  <node pkg="differential_kinematics" type="se2_end_effector_ik_node" name="end_effector_ik_node"  output="screen" >
    <rosparam file="$(find hydrus)/config/$(arg type)/Hydrus.yaml" command="load" />
    <rosparam file="$(find differential_kinematics)/config/hydrus/$(arg type)/EndEffectorIK.yaml" command="load" />
  </node>

</launch>
